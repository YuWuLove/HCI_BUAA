<% @coments.each do |coment| %>
  <tr>
    <td><%= coment.weibo %></td>
    <td><%= coment.user %></td>
    <td><%= coment.content %></td>
    <td><%= link_to 'Show', coment %></td>
    <td><%= link_to 'Edit', edit_coment_path(coment) %></td>
    <td><%= link_to 'Destroy', coment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

